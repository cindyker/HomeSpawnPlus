<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <includeBaseDirectory>false</includeBaseDirectory>
  <id>bin</id>
  <formats>
<!--
    <format>tar.gz</format>
    <format>tar.bz2</format>
-->
    <format>zip</format>
  </formats>
  <files>
    <file>
      <source>${project.build.directory}/${artifactId}.jar</source>
      <destName>HomeSpawnPlus.jar</destName>
      <outputDirectory>/plugins</outputDirectory>
      <filtered>false</filtered>
    </file>
  </files>
  <dependencySets>

    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <useTransitiveFiltering>true</useTransitiveFiltering>
      <includes>
        <include>com.google.inject:guice</include>
        <include>com.google.inject.extensions:guice-assistedinject</include>
        <include>org.reflections:reflections</include>
      </includes>
    </dependencySet>

    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <useTransitiveFiltering>false</useTransitiveFiltering>
      <includes>
        <include>com.andune.minecraft.commonlib:commonlib</include>
        <include>com.andune.minecraft.commonlib:commonBukkitlib</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-api</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-core</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-craftbukkit-api</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-craftbukkit-pre1.4.5</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-craftbukkit-1.4.5</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-craftbukkit-1.4.6</include>
        <include>com.andune.minecraft.hsp:HomeSpawnPlus-craftbukkit-1.4_R1</include>
      </includes>
    </dependencySet>

  </dependencySets>
  <fileSets>
    <fileSet>
      <outputDirectory>/plugins/HomeSpawnPlus</outputDirectory>
      <includes>
        <include>../LICENSE.txt</include>
        <include>../README.txt</include>
        <include>../Changelog.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
